<%= form_with(model: rental, local: true, url:choose_new_or_edit) do |form| %>
  <% if rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rental.errors.count, "件") %> のエラーがあります。</h2>

      <ul>
      <% rental.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rent_property_name %>
    <%= form.text_field :rent_property_name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :building_age %>
    <%= form.number_field :building_age %>年
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <%= form.fields_for :stations do | station | %>
    <h2>最寄り駅<%= station.index + 1 %></h2>

    <div class="field">
      <%= station.label :route_name %>
      <%= station.text_field :route_name %>
    </div>

    <div class="field">
      <%= station.label :station_name %>
      <%= station.text_field :station_name %>
    </div>

    <div class="field">
      <%= station.label :walk_fraction %>
      <%= station.number_field :walk_fraction %>分
    </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
