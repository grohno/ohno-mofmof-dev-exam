<p id="notice"><%= notice %></p>
<section id="rental">
  <p>
    <strong>物件名:</strong>
    <%= @rental.rent_property_name %>
  </p>
  <p>
    <strong>賃料:</strong>
    <%= @rental.rent.to_s(:delimited) %>円
  </p>
  <p>
    <strong>住所:</strong>
    <%= @rental.address %>
  </p>
  <p>
    <strong>築年数:</strong>
    <%= @rental.building_age %>年
  </p>
  <p>
    <strong>備考:</strong>
    <%= @rental.note %>
  </p>
</section>

<dl>
  <% @rental.stations.each_with_index do |station, i| %>
    <dt>最寄り駅<%= i + 1 %></dt>
    <dd><strong>路線名:</strong><%= station.route_name %></dd>
    <dd><strong>駅名:</strong><%= station.station_name %></dd>
    <dd><strong>徒歩分数:</strong><%= station.walk_fraction %>分</dd>
  <% end %>
</dl>

<%= link_to '編集', edit_rental_path(@rental) %> |
<%= link_to '戻る', rentals_path %>
