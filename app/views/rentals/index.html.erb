<p id="notice"><%= notice %></p>

<h1>Rentals</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.rent_property_name %></td>
        <td><%= rental.rent.to_s(:delimited) %>円</td>
        <td><%= rental.address %></td>
        <td><%= rental.building_age %>年</td>
        <td><%= rental.note %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

